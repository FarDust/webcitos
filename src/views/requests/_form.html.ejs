  <form class="crud" action="<%= submitPath %>" method="post">
      <% if (locals.errors) { %>
        <p class="errors">You must correct the following errors to continue:</p>
        <ul>
          <% Object.keys(errors).forEach(prop => { %>
            <li><%= prop %>: <%= errors[prop].message %></li>
          <% }) %>
        </ul>
      <% } %>
      <% if (!request.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
    <div class="center">
      <label for="message">
        <span>Message</span>
        <input class="form-centered" type="text" name="message" id="message" value="<%= request.message %>" />
        <% if (locals.errors && errors.name) { %>
         <span class="error"><%= errors.message.message %></span>
        <% } %>
      </label>
    </div>
    <% if (request.isNewRecord) { %>
      <div class="center">
        <label for="publication_id">
          <span>PublicationID</span>
           <input class="form-centered" type="publication_id" name="publication_id" id="publication_id" value="<%= request.publication_id %>" />
           <% if (locals.errors && errors.publication_id) { %>
           <span class="error"><%= errors.publication_id.message %></span>
          <% } %>
        </label>
      </div>
      <div class="center">
        <label for="userID">
          <span>UserID</span>
          <input class="form-centered" type="userID" name="userID" id="userID" />
          <% if (locals.errors && errors.userID) { %>
           <span class="error"><%= errors.userID.message %></span>
          <% } %>
        </label>
      </div>
      <% } %>
      <div class="actions center">
        <input class="form-centered" type="submit" value="<%= request.isNewRecord ? 'Create' : 'Edit' %>" />
      </div>
    </form>
</div>
