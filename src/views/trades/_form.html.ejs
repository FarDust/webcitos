
<form class="crud" action="<%= submitPath %>" method="post">
  <% if (!trade.isNewRecord) { %>
    <input type="hidden" name="_method" value="patch" />
  <% } %>
  <% if (trade.isNewRecord) { %>
  <div class="center">
    <label for=id_request>
      <span class="form">ID Request</span>
      <input class="form-centered" type="text" name="id_request" id="id_request" value="<%= trade.id_request %>" />
    </label>
  </div>
  <% } %>
  <div class="center">
    <label for="state">
      <span class="form">Select the state of the trade: </span>
        <select name="state" id="state">
          <option value="concreted">Concreted</option>
          <option value="not_concreted">Not concreted</option>
        </select>
    </label>
  </div>
  <div class="actions center">
    <input class="form-centered" id="button-form" type="submit" value="<%= trade.isNewRecord ? 'Create' : 'Edit' %>" />
  </div>
</form>
