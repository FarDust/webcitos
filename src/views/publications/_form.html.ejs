<div>
    <form action="<%= submitPath %>" method="post">
      <% if (locals.errors) { %>
        <p class="errors">You must correct the following errors to continue:</p>
        <ul>
          <% Object.keys(errors).forEach(prop => { %>
            <li><%= prop %>: <%= errors[prop].message %></li>
          <% }) %>
        </ul>
      <% } %>
      <% if (!publication.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
      <label for="title">
        <span>Title</span>
        <input type="text" name="title" id="title" value="<%= publication.title %>" />
        <% if (locals.errors && errors.name) { %>
         <span class="error"><%= errors.title.message %></span>
        <% } %>
      </label>
      <label for="description">
        <span>Description</span>
         <input type="description" name="description" id="description" value="<%= publication.description %>" />
         <% if (locals.errors && errors.description) { %>
         <span class="error"><%= errors.description.message %></span>
        <% } %>
      </label>
      <label for="state">
        <span>State</span>
        <input type="text" name="state" id="state" value="<%= publication.state %>"/>
      </label>
      <label for="userID">
        <span>UserID</span>
        <input type="userID" name="userID" id="userID" />
        <% if (locals.errors && errors.userID) { %>
         <span class="error"><%= errors.userID.message %></span>
        <% } %>
      </label>
      <div class="userID">
        <input type="submit" value="<%= publication.isNewRecord ? 'Create' : 'Edit' %>" />
      </div>
    </form>
</div>
